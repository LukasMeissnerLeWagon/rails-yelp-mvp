<h1>Restaurant Information</h1>
<h2><%= @restaurant.name %></h2>
<p>Category: <%= @restaurant.category %></p>
<p>Adress: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>

<h2>Reviews</h2>
<% @reviews.each do |review| %>
  <p>Description: <%= review.content %></p>
  <p>Rating: <%= review.rating %></p>
  <p>Created at: <%= review.created_at %></p>
  <p>Updated at: <%= review.updated_at %></p>
<% end %>

<%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Review Restaurant", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
